<div class="main users-show">
    <div class="container">
        <div class ="user-information">
            <img src="<%= "/user_images/#{@user.image_name}" %>">
            <h2><%= @user.name %></h2>
            <% if @current_user.id == @user.id %>
                <p><%= @user.email %></p>
                <%= link_to("プロフィールを編集する","/users/#{@user.id}/edit") %>
            <% end %>
        </div>



        <ul class="user-post-like">
            <li class="user-post-index">
                <%= link_to("投稿","/users/#{@user.id}") %>
            </li>

            <li class="user-like-index">
                <%= link_to("いいね！","/users/#{@user.id}/likes") %>
            </li>
            <div class ="clear"></div>
        </ul>

        <% @user.posts.each do |post| %>
            <div class="user-post-list">
                <div class="user-post-image">
                    <img src="<%= "/user_images/#{post.user.image_name}" %>">
                </div>
                <div class="show-user-content">
                    <div class="show-user-name">
                        <%= link_to(post.user.name,"/users/#{post.user.id}") %>
                    </div>
                    
            
                    <span class="post-spacing"><%= link_to(post.content,"/posts/#{post.id}") %></span>
                </div>
            </div>
        <% end %>
    </div>
    
</div>